---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Maqueta 3D">
    <!-- Preload de imágenes -->
    <link rel="preload" href="/09-01.webp" as="image">
    <link rel="preload" href="/09-11.webp" as="image">
    <link rel="preload" href="/09-21.webp" as="image">
    <link rel="preload" href="/09-31.webp" as="image">
    <link rel="preload" href="/10-01.webp" as="image">
    <link rel="preload" href="/10-11.webp" as="image">
    <link rel="preload" href="/10-21.webp" as="image">
    <link rel="preload" href="/10-31.webp" as="image">
    <link rel="preload" href="/11-01.webp" as="image">
    <link rel="preload" href="/11-11.webp" as="image">
    <link rel="preload" href="/11-21.webp" as="image">
    <link rel="preload" href="/11-31.webp" as="image">
    <link rel="preload" href="/9A.webp" as="image">
    <link rel="preload" href="/9B.webp" as="image">
    <link rel="preload" href="/9C.webp" as="image">
    <link rel="preload" href="/9D.webp" as="image">
    <link rel="preload" href="/10A.webp" as="image">
    <link rel="preload" href="/10B.webp" as="image">
    <link rel="preload" href="/10C.webp" as="image">
    <link rel="preload" href="/10D.webp" as="image">
    <link rel="preload" href="/11A.webp" as="image">
    <link rel="preload" href="/11B.webp" as="image">
    <link rel="preload" href="/11C.webp" as="image">
    <link rel="preload" href="/11D.webp" as="image">
    <main>
        <div class="tabs">
            <button class="tab-button selected">9</button>
            <button class="tab-button" >10</button>
            <button class="tab-button" >11</button>
        </div>
        <section>
            <div id="loading-indicator" class="loading">
                <div class="spinner"></div>
                <p>Cargando entorno 3D...</p>
            </div>
            <div id="image-wrapper" class="image-wrapper" style="display: none;">
                <img id="maqueta-image" src="/09-01.webp" alt="Maqueta 3D">
                <div id="labels-container" class="labels-container">
                    <!-- Las etiquetas se generarán dinámicamente -->
                </div>
            </div>
            <div id="controls-container" class="controls-container" style="display: none;">
                <button id="prev-image-btn" aria-label="Anterior"></button>
                <button id="change-image-btn" aria-label="Siguiente"></button>
            </div>
        </section>
        
        <!-- Modal para mostrar imagen de vivienda -->
        <dialog id="housing-modal">
            <button id="close-modal-btn" class="closeButton"> &#9587;</button>
            <img id="modal-image" src="" alt="ficha comercial" class="modalImage">
        </dialog>
    </main>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const imageElement = document.getElementById('maqueta-image') as HTMLImageElement;
        const changeButton = document.getElementById('change-image-btn');
        const prevButton = document.getElementById('prev-image-btn');
        const loadingIndicator = document.getElementById('loading-indicator');
        const controlsContainer = document.getElementById('controls-container');
        const imageWrapper = document.getElementById('image-wrapper');
        const labelsContainer = document.getElementById('labels-container');
        const housingModal = document.getElementById('housing-modal') as HTMLDialogElement;
        const modalImage = document.getElementById('modal-image') as HTMLImageElement;
        const closeModalBtn = document.getElementById('close-modal-btn');
        
        // Matriz de imágenes: [planta][frame]
        const imageSequence = [
            ['/09-01.webp', '/09-11.webp', '/09-21.webp', '/09-31.webp'], // Planta 9
            ['/10-01.webp', '/10-11.webp', '/10-21.webp', '/10-31.webp'], // Planta 10
            ['/11-01.webp', '/11-11.webp', '/11-21.webp', '/11-31.webp']  // Planta 11
        ];
        
        // Matriz de etiquetas con posiciones: [planta][frame][vivienda]
        const housingLabels = [
            [ // Planta 9
                [ // Frame A
                    { name: '9A', x: 31.5, y: 30.5, vendido: true },
                    { name: '9B', x: 52, y: 30.5, vendido: false },
                    { name: '9C', x: 31.5, y: 43, vendido: true },
                    { name: '9D', x: 52, y: 43, vendido: false }
                ],
                [ // Frame B
                    { name: '9A', x: 62, y: 20, vendido: true },
                    { name: '9B', x: 62, y: 31.53, vendido: false },
                    { name: '9C', x: 39, y: 20.4, vendido: true },
                    { name: '9D', x: 39, y: 30, vendido: false }
                ],
                [ // Frame C
                    { name: '9A', x: 70, y: 44, vendido: true },
                    { name: '9B', x: 47, y: 44, vendido: false },
                    { name: '9C', x: 70, y: 30.5, vendido: true },
                    { name: '9D', x: 46.7, y: 30.5, vendido: false }
                ],
                [ // Frame D
                    { name: '9A', x: 40, y: 55.5, vendido: true },
                    { name: '9B', x: 40, y: 42, vendido: false },
                    { name: '9C', x: 60, y: 55, vendido: true },
                    { name: '9D', x: 60, y: 44.8, vendido: false }
                ]
            ],
            [ // Planta 10
                [ // Frame A
                    { name: '10A', x: 31, y: 29, vendido: true },
                    { name: '10B', x: 52, y: 29, vendido: false },
                    { name: '10C', x: 31, y: 41, vendido: true },
                    { name: '10D', x: 52, y: 41, vendido: false }
                ],
                [ // Frame B
                    { name: '10A', x: 61, y: 17.5, vendido: true },
                    { name: '10B', x: 61, y: 29.6, vendido: false },
                    { name: '10C', x: 40, y: 18.8, vendido: true },
                    { name: '10D', x: 40, y: 27.5, vendido: false }
                ],
                [ // Frame C
                    { name: '10A', x: 69, y: 41.2, vendido: true },
                    { name: '10B', x: 47, y: 41.5, vendido: false },
                    { name: '10C', x: 69, y: 28.8, vendido: true },
                    { name: '10D', x: 47, y: 28.3, vendido: false }
                ],
                [ // Frame D
                    { name: '10A', x: 38, y: 54, vendido: true },
                    { name: '10B', x: 40, y: 40, vendido: false },
                    { name: '10C', x: 61, y: 53, vendido: true },
                    { name: '10D', x: 61, y: 42, vendido: false }
                ]
            ],
            [ // Planta 11
                [ // Frame A
                    { name: '11A', x: 34, y: 28.5, vendido: true },
                    { name: '11B', x: 52, y: 28.5, vendido: false },
                    { name: '11C', x: 33, y: 37.4, vendido: true },
                    { name: '11D', x: 51, y: 37.4, vendido: false }
                ],
                [ // Frame B
                    { name: '11A', x: 60, y: 17.3, vendido: true },
                    { name: '11B', x: 60, y: 26, vendido: false },
                    { name: '11C', x: 40, y: 18, vendido: true },
                    { name: '11D', x: 40, y: 26, vendido: false }
                ],
                [ // Frame C
                    { name: '11A', x: 68, y: 38, vendido: true },
                    { name: '11B', x: 49, y: 38, vendido: false },
                    { name: '11C', x: 68, y: 29, vendido: true },
                    { name: '11D', x: 49, y: 29.9, vendido: false }
                ],
                [ // Frame D
                    { name: '11A', x: 40, y: 51, vendido: true },
                    { name: '11B', x: 40, y: 40, vendido: false },
                    { name: '11C', x: 59, y: 50, vendido: true },
                    { name: '11D', x: 59, y: 41.5, vendido: false }
                ]
            ]
        ];
        let currentFloor = 0; // Planta actual (0, 1, 2)
        let currentFrame = 0; // Frame actual dentro de la planta (0, 1, 2, 3)
        let imagesLoaded = 0;
        const totalImages = imageSequence.flat().length;
        
        // Función para actualizar la imagen mostrada
        function updateImage() {
            imageElement.src = imageSequence[currentFloor][currentFrame];
            updateLabels();
        }
        
        // Función para actualizar las etiquetas
        function updateLabels() {
            // Limpiar etiquetas existentes
            labelsContainer.innerHTML = '';
            
            // Crear nuevas etiquetas para el frame actual
            const currentLabels = housingLabels[currentFloor][currentFrame];
            
            currentLabels.forEach(label => {
                const labelElement = document.createElement('div');
                labelElement.textContent = label.name;
                
                // Aplicar solo las posiciones (el resto se maneja con CSS global)
                labelElement.style.left = label.x + '%';
                labelElement.style.top = label.y + '%';
                
                // Añadir la clase base que se estiliza con CSS global
                labelElement.classList.add('maqueta-housing-label-dynamic');
                
                // Añadir clase según el estado de vendido
                if (label.vendido) {
                    labelElement.classList.add('vendido');
                }
                
                // Añadir event listener para abrir modal
                labelElement.addEventListener('click', function() {
                    openHousingModal(label.name);
                });
                
                labelsContainer.appendChild(labelElement);
            });
        }
        
        // Función para avanzar al siguiente frame
        function nextFrame() {
            currentFrame = (currentFrame + 1) % imageSequence[currentFloor].length;
            updateImage();
        }
        
        // Función para retroceder al frame anterior
        function prevFrame() {
            currentFrame = (currentFrame - 1 + imageSequence[currentFloor].length) % imageSequence[currentFloor].length;
            updateImage();
        }
        
        // Función para cambiar de planta
        function changeFloor(floor) {
            currentFloor = floor;
            // Mantener el currentFrame actual, no resetear
            updateImage();
        }
        
        // Función para abrir modal con imagen de vivienda
        function openHousingModal(housingName) {
            const imagePath = `/${housingName}.webp`;
            modalImage.src = imagePath;
            modalImage.alt = `Imagen de vivienda ${housingName}`;
            housingModal.showModal();
        }
        
        // Función para cerrar modal
        function closeHousingModal() {
            housingModal.close();
        }
        
        // Función para precargar imágenes
        function preloadImages() {
            imageSequence.flat().forEach((src, index) => {
                const img = new Image();
                img.onload = function() {
                    imagesLoaded++;
                    if (imagesLoaded === totalImages) {
                        // Todas las imágenes están cargadas
                        loadingIndicator.style.display = 'none';
                        imageWrapper.style.display = 'block';
                        controlsContainer.style.display = 'flex';
                        
                        // Mostrar la primera imagen
                        updateImage();
                    }
                };
                img.onerror = function() {
                    console.error(`Error al cargar la imagen: ${src}`);
                    imagesLoaded++;
                    if (imagesLoaded === totalImages) {
                        loadingIndicator.style.display = 'none';
                        imageWrapper.style.display = 'block';
                        controlsContainer.style.display = 'flex';
                        
                        // Mostrar la primera imagen
                        updateImage();
                    }
                };
                img.src = src;
            });
        }
        
        // Iniciar preload
        preloadImages();
        
        // Event listeners para los botones de planta (tabs)
        document.querySelectorAll('.tab-button').forEach((button, index) => {
            button.addEventListener('click', function() {
                changeFloor(index);
                
                // Actualizar botón activo
                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('selected'));
                this.classList.add('selected');
            });
        });
        
        // Event listener para el botón de avanzar
        changeButton.addEventListener('click', function() {
            nextFrame();
        });
        
        // Event listener para el botón de retroceder
        prevButton.addEventListener('click', function() {
            prevFrame();
        });
        
        // Event listeners para el modal
        closeModalBtn.addEventListener('click', function() {
            closeHousingModal();
        });
        
        // Cerrar modal al hacer clic fuera del contenido (igual que en index)
        housingModal.addEventListener('click', function(event) {
            const rect = housingModal.getBoundingClientRect();
            const isInDialog = (rect.top <= event.clientY && event.clientY <= rect.top + rect.height &&
                                rect.left <= event.clientX && event.clientX <= rect.left + rect.width);
            if (!isInDialog) {
                closeHousingModal();
            }
        });
        
        // Cerrar modal con tecla Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && housingModal.open) {
                closeHousingModal();
            }
        });
    });
</script>



<style>
    body {
        overflow: hidden;
    }

    .tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 16px;
    }
    .tab-button {
        width: 80px;
        padding: 12px 24px;
        border: none;
        background-color: hsl(240, 15%, 27%);
        color: hsl(240, 15%, 97%);
        cursor: pointer;
        font-size: 16px;
        border-radius: 4px;
        margin: 4px 1px;
        transition: background-color 0.3s;
    }
    .tab-button.selected {
        background-color: hsl(230, 100%, 69%);
    }
    .tab-button:hover {
        background-color: hsl(230, 100%, 75%);
    }
    
    .loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: #ffffff;
        font-size: 18px;
    }
    
    /* Contenedor de imagen con posición relativa */
    .image-wrapper {
        position: relative;
        display: inline-block;
        max-width: 100%;
        max-height: 100%;
        scale: 1.15;
    }
    
    /* Contenedor de etiquetas */
    .labels-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 9;
        opacity: 1;
        visibility: visible;
    }
    
    /* Etiquetas dinámicas - CSS global necesario para elementos creados por JS */
    :global(.labels-container .maqueta-housing-label-dynamic) {
        position: absolute;
        background: #28a745; /* Color por defecto: verde (no vendido) */
        color: white;
        max-width: 35px;
        max-height: 35px;
        width: 5vw;
        height: 5vw;
        border-radius: 6px;
        font-size: 10px;
        font-weight: 600;
        box-shadow: 0 0px 0px rgba(0, 0, 0, 0.8);
        transform: translate(-50%, -50%);
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        overflow: hidden;
        border: 3px solid white;
        line-height: 1;
        padding: 0;
        margin: 0;
        z-index: 9;
        pointer-events: auto;
        opacity: 1;
        visibility: visible;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    /* Efecto hover - ampliar etiqueta */
    :global(.labels-container .maqueta-housing-label-dynamic:hover) {
        transform: translate(-50%, -50%) scale(1.2);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        z-index: 10;
    }
    
    /* Clase para viviendas vendidas - fondo rojo */
    :global(.labels-container .maqueta-housing-label-dynamic.vendido) {
        background: #ff5959;
    }

    .modalImage {
        height: 100%;
        width: 100%;
        max-width: 90vw;
        max-height: 90vh;
        margin: 0px;
        border: none;
    }
    
    /* Contenedor de controles con flexbox */
    .controls-container {
        position: relative;
        bottom: 30px;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 40px;
        z-index: 20;
    }
    
    /* Botones de rotación */
    #prev-image-btn,
    #change-image-btn {
        width: 60px;
        height: 60px;
        border: none;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        cursor: pointer;
        font-size: 24px;
        font-weight: bold;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
    
    #prev-image-btn:hover,
    #change-image-btn:hover {
        background: rgba(0, 0, 0, 0.9);
        transform: scale(1.1);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }
    
    /* Iconos de flechas curvas */
    #prev-image-btn::after {
        content: "↺";
        font-size: 28px;
        transform: scaleX(-1);
    }
    
    #change-image-btn::after {
        content: "↻";
        font-size: 28px;
        transform: scaleX(-1);
    }
    
    .spinner {
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #3498db;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 20px;
    }
    
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    section {
        background-color: hsl(240, 15%, 17%);
        height: calc(100vh - 48px);
        margin: 24px;
        border-radius: 13px;
        background-position: 50% 70%;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    #maqueta-image {
        max-width: 100%;
        max-height: 100%;
        border-radius: 12px;
        aspect-ratio: 16 / 9;
    }

    dialog {
        max-height: calc(100vh - 16px);
        border: none;
        height: fit-content;
    }
    dialog::backdrop {
        background-color: #26263399;
    }

    .closeButton {
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        top: 8px;
        right: 8px;
        height: 48px;
        width: 48px;
        outline: none;
        background-color: hsl(240, 15%, 27%);
        color: hsl(240, 15%, 97%);
        cursor: pointer;
        font-size: 16pt;
        border: 2px hsl(240, 15%, 27%) solid;
        border-radius: 250px;
        text-align: center;
    }
    main {
        height: calc(100dvh - 80px);
    }

    @media (orientation: portrait) {
        section {
            height: auto;
            width: 100%;
            margin: 0;
        }
        .modalImage {
            margin: 0;
            border: 15px solid white;
        }
        main {
            height: calc(100dvh - 80px);
            overflow: scroll;
        }
        /* Responsive mobile para botones con flexbox */
        .controls-container {
            bottom: 20px;
            gap: 30px;
        }
        
        #prev-image-btn,
        #change-image-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
        
        #prev-image-btn::after {
            font-size: 24px;
        }
        
        #change-image-btn::after {
            font-size: 24px;
        }
        
        /* Etiquetas responsive 
        :global(.labels-container .maqueta-housing-label-dynamic) {
            width: 28px;
            height: 28px;
            font-size: 7px;
            border-radius: 4px;
        }
        
        /* Efecto hover responsive para móvil */
        :global(.labels-container .maqueta-housing-label-dynamic:hover) {
            transform: translate(-50%, -50%) scale(1.3);
        }
        
        .closeButton {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    }
</style>